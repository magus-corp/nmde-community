#!/bin/sh
# This script configures a dual-monitor setup for a "Normal Dual Laptop" scenario.
# It sets the internal laptop display (LVDS1) as primary and extends the desktop
# to an external monitor (VGA1).

xrandr \
  --output LVDS-1 --primary --mode 1366x768 --pos 0x0 --rotate normal \
  --output VGA-1 --mode 1920x1080 --pos 1366x0 --rotate normal \
  --output DP1 --off \
  --output DP2 --off \
  --output DP3 --off \
  --output HDMI1 --off \
  --output HDMI2 --off \
  --output HDMI3 --off \
  --output VIRTUAL1 --off

