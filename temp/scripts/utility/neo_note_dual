#!/bin/sh
# This script configures a dual-monitor setup for a "Neo Note" laptop.
# It sets the internal laptop display (LVDS1) as primary and rotates it,
# and extends the desktop to an external monitor (VGA1).

xrandr \
  --output LVDS1 --primary --mode 1366x768 --pos 0x0 --rotate left \
  --output DP1 --off \
  --output DP2 --off \
  --output DP3 --off \
  --output HDMI1 --off \
  --output HDMI2 --off \
  --output HDMI3 --off \
  --output VGA1 --mode 1920x1080 --pos 768x400 --rotate normal \
  --output VIRTUAL1 --off
