# Example environment variables for CVAT stack
# Found in composes/cvat.yaml
# These are some of the key variables. CVAT has extensive configuration options.

# Version of CVAT images to use (if not specified directly in compose file image tags)
# CVAT_VERSION="dev"

# Hostname for CVAT, used in various places like Traefik and Grafana links
# CVAT_HOST="localhost"

# Backend environment variables (from x-backend-env)
CVAT_POSTGRES_HOST="shared-postgres-15"
CVAT_REDIS_INMEM_HOST="shared-redis"
CVAT_REDIS_INMEM_PORT="6379"
CVAT_REDIS_ONDISK_HOST="cvat_redis_ondisk"
CVAT_REDIS_ONDISK_PORT="6666"
CVAT_LOG_IMPORT_ERRORS="true"
# DJANGO_LOG_SERVER_HOST="vector" # Handled by service linking
# DJANGO_LOG_SERVER_PORT="80"   # Handled by service linking
ALLOWED_HOSTS="*" # Adjust for production for security

# ClickHouse environment variables (from x-clickhouse-env)
CLICKHOUSE_HOST="clickhouse"
CLICKHOUSE_PORT="8123"
CLICKHOUSE_DB="cvat"
CLICKHOUSE_USER="user"
CLICKHOUSE_PASSWORD="user" # Change this in a production setup

# Other potentially useful variables
# CVAT_BASE_URL="http://${CVAT_HOST:-localhost}" # Base URL for CVAT, ensure CVAT_HOST is set
# NUMPROCS="2" # Number of processes for workers, adjust based on server resources

# Variables for Traefik (if you customize its entrypoints or dashboard)
# TRAEFIK_API_DASHBOARD="true"
# TRAEFIK_ENTRYPOINTS_DASHBOARD_ADDRESS=":8090"
